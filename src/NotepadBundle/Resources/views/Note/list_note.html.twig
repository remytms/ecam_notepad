{% extends 'NotepadBundle::base.html.twig' %}

{% block title %}Note list{% endblock %}

{% block content %}
<h1>Note list</h1>

{% for note in notes %}
<h2>{{ note.title }}</h2>
<p>
{{ note.date|date("m/d/Y") }} 
{% if note.category.name is defined %}
  - {{ note.category.name }}
{% endif %}
</p>
<p>{{ note.content }}</p>
{% else %}
<p>There is no notes</p>
{% endfor %}

{% endblock %}
