{% extends 'NotepadBundle::base.html.twig' %}

{% block title %}Category list{% endblock %}

{% block content %}
<h1>Category list</h1>

{% for category in categories %}
  {% if loop.first %}
  <ul>
  {% endif %}

  <li>{{ category.name }}</li>

  {% if loop.last %}
  </ul>
  {% endif %}

{% else %}
<p>There is no categories</p>
{% endfor %}

{% endblock %}
